@using System.Linq
@using Microsoft.AspNetCore.Http.Extensions
@using PolpAbp.AspNetCore.Mvc.UI.Theme.Impact.Themes.Impact.Components.Toolbar.LanguageSwitch
@model LanguageSwitchViewComponentModel
@if (Model.OtherLanguages.Any())
{
    <div class="dropdown">
        <a href="#"><span>@Model.CurrentLanguage.DisplayName</span> <i class="bi bi-chevron-down"></i></a>
        <ul>
            @foreach (var language in Model.OtherLanguages)
            {
                <li>
                    <a href="~/Abp/Languages/Switch?culture=@(language.CultureName)&uiCulture=@(language.UiCultureName)&returnUrl=@(System.Net.WebUtility.UrlEncode(Context.Request.GetEncodedPathAndQuery()))">@language.DisplayName</a>
                </li>
            }
        </ul>
    </div>
}
